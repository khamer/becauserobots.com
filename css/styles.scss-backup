/* = Media Queries = */
@include tablets-and-up {

	.main aside {
		float: right;
		margin-left: 1em;
		width: 33.33%;
	}

	nav.utility {
		display: block;
		position: absolute;
		right: 2 * $rem;
		top: 1em;

		a {
			display: block;
			color: #fff;
			font-size: .75 * $rem;
		}

		li.active,
		li:hover {
			a {
				color: $link;
			}
		}
	}

	nav.secondary {
		display: block;
		background: #2e2e2e;

		a {
			display: block;
			color: #bbbbbb;
			font-size: .8125 * $rem;
			line-height: 2;
		}

		li.active,
		li:hover {
			a {
				color: $link;
			}
		}
	}

	nav.primary {
		&:before,
		ul:before {
			display: none;
		}

		ul {
			li {
				float: left;
				display: block;

				a {
					@include headingType;

					border-top: 0;

					&:before {
						display: none;
					}
				}
			}
			
			li {
				li {
					float: none;

					a {
						font-size: .8125 * $rem;
						font-family: inherit;
					}
				}
			}

			li.active,
			li:hover {
				background: none;
			}

			li:hover {
				position: relative;
				background: #333333;

				.dropdown {
					display: block;
					position: absolute;
					left: 0;
					min-width: 100%;
					background: #333333;
				}
			}
		}
	}
}

@include desktops-and-up {

	.torso aside.primary {
		display: block;
		float: right;
		width: 25%;
	}
	.torso aside.primary ~ .main {
		float: left;
		width: 75%;
		padding-right: 2em;
	}
}

@media print {
	* {
		background: transparent !important;
		box-shadow: none !important;
		color: #000 !important; /* Black prints faster: h5bp.com/s */
		text-shadow: none !important;
	}

	a,
	a:visited {
		text-decoration: underline;
	}

	pre, blockquote, tr, img, h1, h2, h3, h4, h5, h6 {
		page-break-inside: avoid;
	}

	thead {
		display: table-header-group;
	}

	@page {
		margin: 0.5cm;
	}

	p,
	h2,
	h3 {
		orphans: 3;
		widows: 3;
	}
}
