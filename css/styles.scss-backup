/* = Navigation = */
nav.primary {
	z-index: 1;

	&:before,
	ul:before {
		@include fontawesome;

		bottom: 100%;
		color: #000;
		content: '\f0c9';
		display: block;
		font-size: 2.5 * $rem;
		padding: .35em .6em;
		position: absolute;
		right: 0;
	}

	ul {
		&:before {
			color: $plain-text;
		}

		li {
			float: none;
			display: none;

			.dropdown {
				display: none;
			}

			a {
				@include headingType;

				border-top: 1px solid #212121;
				display: block;
				padding: .5em $rem;
				color: #fff;

				&:before {
					@include fontawesome;

					content: '\f054';
					float: right;
				}
			}
		}

		li:hover,
		li.active {
			background: #1a1a1a;

			> a {
				color: $link;

				&:before {
					margin-right: -.5em;
				}
			}
		}
	}

	ul[data-focus="focus"] {
		&:before {
			display: none;
		}

		li {
			display: block;
		}
	}

	ul.container {
		padding-left: 0;
		padding-right: 0;
	}
}

nav.secondary {
	display: none;
}

nav.utility {
	display: none;
}

nav.supplemental {
	ul {
		li {
			float: none;

			a {
				padding: .25em 0;
				display: block;
			}

			a:hover {
				color: $link;
			}
		}

		ul {
			a {
				padding: 0;
				color: $meta-text;
				font-size: .75 * $rem;
				line-height: 2;
			}
		}
	}

	> ul {
		> li {
			padding-bottom: .5em;
		}
		> li ~ li {
			padding-top: .5em;
			border-top: 1px solid $border;
		}
	}
}

/* = Forms = */
button,
input,
select,
textarea {
	font-size: 100%;
}

.button,
.checkboxes,
.file,
.password,
.radios,
.reset,
.select,
.submit,
.text,
.textarea {
	margin-bottom: $phi * 1em;
}

label {
	color: #333;
	cursor: pointer;
	display: block;
	font-weight: bold;
	line-height: 2;
}

.required {
	color: #ac181b;
}

fieldset .help {
	color: $meta-text;
	display: block;
	font-size: .75 * $rem;
	line-height: 1.34;
	margin: 0;
	padding: 0;
}

input[type="password"],
input[type="text"],
textarea {
	@include bodyType;
	border: 1px solid #ccc;
	color: $plain-text;
	display: block;
	font-size: $rem;
	margin: 0;
	padding: 0.4em 1%;
	width: 98%;
}

select {
	margin-bottom: 0;
}
.multiple select {
	padding-left: 5px;
	padding-right: 10px;
}

textarea {
	height: 12em;
	overflow: auto;
	resize: vertical;
}

.radio,
.checkbox {
	font-weight: normal;
}

input[type="checkbox"],
input[type="radio"] {
	padding: 0
}

input[type="file"] {
	color: #333;
	display: block;
	font-size: $rem;
	width: 100%;
}

button,
input[type="button"],
input[type="reset"],
input[type="submit"] {
	-moz-appearance: button;
	-webkit-appearance: button;
	cursor: pointer;
}

button,
input[type="button"],
input[type="reset"],
input[type="submit"],
a.button {
	@include bg-gradient($link, darken($link, 10%));
	@include headingType;

	border: 1px solid darken($link, 10%);
	border-radius: 4px;
	color: #fff;
	display: inline-block;
	line-height: 1;
	margin-bottom: .5em;
	margin-right: .5em;
	padding: .6em .7em;
	text-align: center;

	&:hover {
		background: $link;
		border-color: $link;
		cursor: pointer;
	}

	&:focus {
		background: #0084B8;
	}
}

button.disabled,
input[type="button"][disabled],
input[type="reset"][disabled],
input[type="submit"][disabled],
a.button.disabled {
	@include bg-gradient($meta-text, darken($meta-text, 10%));
	border-color: darken($meta-text, 10%);
	cursor: default;
}

button::-moz-focus-inner,
input::-moz-focus-inner {
	border: 0;
	padding: 0;
}

/* = Messaging = */

@mixin messaging {
	border-radius: 4px;
	margin-bottom: $phi * 1em;
	padding: 1em 3.25em;
	position: relative;
	
	a {
		text-decoration: underline;
	}

	&:before {
		@include fontawesome;

		content:'';
		display: block;
		font-size: 20px;
		height: 23px;
		left: 1em;
		position: absolute;
		top: .6em;
		width: 23px;
	}
}

.success {
	@include messaging;
	background: $success;

	&:before {
		content: '\f00c';
	}
}

.error {
	@include messaging;
	background: $error;

	&:before {
		content: '\f12a';
	}
}

.info {
	@include messaging;
	background: $info;

	&:before {
		content: '\f129';
	}
}

/* = Tables = */
table {
	border-collapse: collapse;
	border-spacing: 0;
	margin-bottom: $phi * 1em;
	width: 100%;

	caption {
		font-size: .75 * $rem;
		margin-bottom: .75em;
	}

	td,
	th {
		padding: .5em 1em;
		text-align: left;
		vertical-align: top;
	}

	th {
		font-weight: bold;
		background: $plain-text;
		border: 1px solid $plain-text;
		color: #fff;
		text-transform: uppercase;
	}

	td {
		border: 1px solid #e3e3e3;
	}
	
	tr:nth-child(even) td {
		background: #f3f3f3;
	}
	
}


