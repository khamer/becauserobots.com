/* = Web Fonts = */
@import url(http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900|Oswald:400,300,700);

@font-face {
  font-family: 'FontAwesome';
  src: url('../fonts/fontawesome-webfont.eot');
  src: url('../fonts/fontawesome-webfont.eot?#iefix') format('embedded-opentype'), url('../fonts/fontawesome-webfont.woff') format('woff'), url('../fonts/fontawesome-webfont.ttf') format('truetype'), url('../fonts/fontawesome-webfont.svg#fontawesomeregular') format('svg');
  font-weight: normal;
  font-style: normal;
}


/* = Variables = */
$rem:        18px;
$phi:        1.61803398875;
$iph:        $phi/($phi - 1);
$oswaldCap:  .88;
$latoCap:    .74;
$latoX:      .52;

$matte:      #2a2a2a; // Mine Shaft
$torso-bg:   #FCFCFC; // Alabaster
$selection:  #FFF1B5; // Buttermilk

$plain-text: #555555; // Emperor
$meta-text:  #888888; // Gray
$link:       #0394CD; // iMarc Blue
$link:       #e33;
$link-hover: #888888; // Gray
$highlight:  #f2006d; // iMarc Pink

$border:     #DDDDDD; // Alto

$success:    #D2F8B0; // Gossip
$error:      #FFD8D9; // Cosmos
$info:       #B8E0F9; // Sail

@mixin bodyType {
	font-family: Lato, "Helvetica Neue", Arial, sans-serif;
	line-height: $iph * $latoX;
}

@mixin headingType {
	font-family: "Oswald";
	font-weight: 700;
	line-height: $phi * $oswaldCap;
	text-transform: uppercase;
}


/* = Mixins = */
@mixin grouping {
	&:before,
	&:after {
		content: '';
		display: table;
	}

	&:after {
		clear: both;
	}
}

.container,
.group {
	@include grouping;
}

@mixin container {
	margin-left: auto;
	margin-right: auto;
	max-width: 1024px;
	padding-left: $rem;
	padding-right: $rem;
	position: relative;
}

.container {
	@include container;
}

@mixin columns($query: 'min-width: 600px') {
	> hr {
		display: none;
	}

	@media only screen and ($query) {
		& {
			display: table;
			table-layout: fixed;
			width: 100%;

			> * {
				display: table-cell;
				vertical-align: top;
			}
			> hr {
				display: table-cell;
				width: $rem;
			}
		}
	}
}

.columns {
	@include columns;
}

@mixin fontawesome {
	font-family: FontAwesome;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	font-style: normal;
	font-weight: normal;
	speak: none;
	text-transform: none;
}

@mixin no-bullets {
	padding-left: 0;
	list-style: none;

	li:before {
		display: none;
	}
}

@mixin transition($properties: all, $duration: 250ms, $easing: ease-in-out) {
	@if length($properties) > 1 {
		-webkit-transition-property: $properties;
		transition-property: $properties;
	} @else {
		-webkit-transition: $properties $duration $easing;
		transition: $properties $duration $easing;
	}
}

@mixin tablets-and-up {
	@media only screen and (min-width: 600px) {
		@content;
	}

	html.lt-ie9 {
		@content;
	}
}

@mixin desktops-and-up {
	@media only screen and (min-width: 700px) {
		@content;
	}

	html.lt-ie9 {
		@content;
	}
}

@mixin bg-gradient($start-color, $end-color, $orientation: 'vertical') {
	$direction: if($orientation == vertical, 0, 1);
	filter: progid:DXImageTransform.Microsoft.gradient(gradientType=#{$direction}, startColorStr='#{ie-hex-str($start-color)}', endColorStr='#{ie-hex-str($end-color)}');

	$direction: if($orientation == vertical, top, left);
	background-image: -webkit-linear-gradient($direction, $start-color, $end-color);
	background-image: -o-linear-gradient($direction, $start-color, $end-color);

	$direction: if($orientation == vertical, bottom, right);
	background-image: linear-gradient(to $direction, $start-color, $end-color);
}


/* = Base = */
a, abbr, address, article, aside, audio, b, blockquote, body, canvas, cite,
code, dd, div, dl, dt, em, fieldset, footer, form, h1, h2, h3, h4, h5, h6,
header, html, hr, i, iframe, img, label, li, nav, object, ol, p, pre, section,
span, strong, sub, sup, table, tbody, td, tfoot, th, thead, tr, ul, video {
	border: 0;
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
	font-size: 100%;
	font: inherit;
	margin: 0;
	outline: 0;
	padding: 0;
	vertical-align: baseline;
}

article, aside, audio, canvas, footer, header, nav, section, video {
	display: block;
}

html {
	@include bodyType;

	background: $matte;
	color: $plain-text;
	font-size: $rem;
	-ms-text-size-adjust: 100%;
	-webkit-text-size-adjust: 100%;
}

body {
	background: $torso-bg;
	min-width: 300px;
}

img {
	max-width: 100%;
	vertical-align: middle;
}

::-moz-selection {
	background: $selection;
	text-shadow: none;
}

::selection {
	background: $selection;
	text-shadow: none;
}


/* = Layout = */
header.primary {
	@include bg-gradient(#2e2e2e, #1a1a1a);

	.branding {
		h1 {
			padding-bottom: 0;

			a,
			a:hover {
				color: $torso-bg;
				display: block;
				padding-bottom: .5em;
				padding-top: .5em;
			}
		}
	}
}

.torso {
	padding-top: $phi * 1em;
	padding-bottom: $phi * 1em;
}

.main section {
	&:after {
		content: '';
		display: block;
		background: $border;
		margin-top: $phi * 1em;
		margin-bottom: $phi * 1em;
		height: 1px;
	}
}

aside.primary {
	display: none;
}

.main aside {
	background: mix($torso-bg, $meta-text, 80%);
	border-radius: 4px;
	color: $meta-text;
	font-size: .875 * $rem;
	margin-bottom: 1em;
	padding: 1.333em;
}

footer.primary {
	background: $matte;
	color: $meta-text;
	font-size: .875 * $rem;
	padding-top: 1em;
	padding-bottom: 1em;
}

/* = Typography = */
@mixin header-font {
	@include headingType;

	padding-top: ($phi - 1) * $rem;
	padding-bottom: ($phi - 1) * $rem;

	//line-height: 1;
	//padding-top: $phi * $rem;
	//padding-bottom: $phi * $rem;

	&:first-child {
		padding-top: 0;
	}
}

h1 + h2,
h2 + h3,
h3 + h4,
h4 + h5,
h5 + h6 {
	padding-top: 0;
	margin-top: (1 - $phi) * $rem;
}

h1 {
	@include header-font;
	font-size: 55px;
	//line-height: 1.2;
}

h2 {
	@include header-font;
	font-size: 34px;
	//line-height: 1.2;
}

h3 {
	@include header-font;
	font-size: 21px;
	//line-height: 1.3;
}

h4 {
	@include header-font;
	font-size: 1.25 * $rem;
	//line-height: 1.4;
}

h5,
h6 {
	@include header-font;
}

.meta {
	color: $meta-text;
	font-size: .75 * $rem;
	margin-bottom: .5em;
	margin-top: -.667em;
}

abbr[title] {
	border-bottom: 1px dotted;
}

b,
strong {
	font-weight: bold;
}

i,
em {
	font-style: italic;
}

blockquote,
pre {
	@include grouping;
	color: $meta-text;
	margin-bottom: $phi * $rem;
}

blockquote {
	border-left: 1px solid $border;
	font-style: italic;
	padding-left: $rem;
}

article {
	margin-bottom: 3em;
}

.intro {
	color: $meta-text;

	p {
		font-size: 1.25 * $rem;
		line-height: 1.6;
		margin-bottom: .8em;
	}
}

.highlight {
	padding: $rem/2;
	margin: 0 $rem/-2 $phi * $rem;
	background: mix($torso-bg, $meta-text, 80%);
	border-radius: 0 4px 4px 4px;
	color: $meta-text;
	font-size: $phi * $rem;
	line-height: 1.34;
	text-shadow: 0 1px 0 lighten($meta-text, 45%);

	a {
		text-shadow: 0 1px 0 lighten($link, 45%);
	}

	> :last-child {
		margin-bottom: 0;
	}
}

pre,
code {
	font-family: Menlo, 'Ubuntu Mono', Consolas, 'Courier New', monospace;
	font-size: .875 * $rem;
}

pre {
	white-space: pre;
	white-space: pre-wrap;
	word-wrap: break-word;
}

p {
	margin-bottom: $phi * 1em;
}

address {
	margin-bottom: $phi * 1em;
}

hr {
	border: 0;
	border-top: 1px solid $meta-text;
	display: block;
	height: 0;
	margin: 2em auto 3em;
	width: 100%;
}

a {
	color: $link;
	text-decoration: none;

	&:hover,
	&:active {
		color: $link-hover;
	}

	&:focus {
		outline: thin dotted;
	}
}

ol,
ul,
dl {
	margin-bottom: $phi * 1em;
}

ol,
ul {
	padding-left: 2em;

	li,
	dt,
	dd {
		margin-bottom: .5em;
	}
}

ul {
	list-style: disc;
}

dt {
	font-weight: bold;
	padding-left: .5em;
}

dd {
	padding-left: 2em;
}

sup,
sub {
	font-size: 80%;
}

sup {
	vertical-align: top;
}

sub {
	vertical-align: bottom;
}

nav {
	@include grouping;
	position: relative;

	ul {
		list-style: none;
		padding-left: 0;
		margin-bottom: 0;
		position: relative;

		li {
			white-space: nowrap;
			margin-bottom: 0;
			float: left;
			display: block;

			a {
				padding: .5em 10px;
			}
		}
	}

	ul.container {
		padding-left: 6px;
		padding-right: 6px;
	}
}

.main nav ul li ~ li {
	border-left: 1px solid $border;
}

/* = Iconography = */
a.doc:before,
a.docx:before,
a.pdf:before,
a.word:before,
[class*="icon-"]:before {
	@include fontawesome;
}

a.doc:before,
a.docx:before,
a.pdf:before,
a.word:before,
a[class*="icon-"]:before {
	width: 1em;
	padding-right: .1em;
	text-align: center;
	display: inline-block;
}

.icon-only {
	overflow: visible;
	font-size: 0;

	&:before {
		font-size: 2 * $rem;
	}
}

.icons {
	padding-left: 9px;

	li {
		list-style: none;

		a.doc:before,
		a.docx:before,
		a.pdf:before,
		a.word:before,
		a[class*="icon-"]:before {
			color: $plain-text;
			padding-right: .5em;
		}
	}
}

a.button[class*="icon-"]:before {
	padding-right: .5em;
}

